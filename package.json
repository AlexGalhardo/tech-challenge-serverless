{
  "name": "refactor-tech-challenge-stone",
  "scripts": {
    "prepare": "npx husky install",
    "start": "AWS_PROFILE=sm-sdx sls offline --noPrependStageInUrl",
    "debug": "export SLS_DEBUG=* AWS_PROFILE=sm-sdx LOGGER_LEVEL=TRACE && node --inspect ./node_modules/.bin/serverless offline --noPrependStageInUrl",
    "test": "LOGGER_LEVEL=silent jest",
    "test:watch": "LOGGER_LEVEL=silent jest --watch",
    "test:coverage": "LOGGER_LEVEL=silent jest --coverage",
    "lint": "tsc --noEmit && eslint --ext .ts src/ --fix",
    "clean": "rimraf dist",
    "tsc": "tsc -p tsconfig.build.json",
    "tsc-alias": "tsc-alias -p tsconfig.build.json",
    "prune": "npm prune --omit=dev",
    "mv:node_modules": "mv node_modules dist/node_modules",
    "zip": "cd dist && zip -r latest.zip ./",
    "build": "run-s clean tsc tsc-alias prune mv:node_modules zip"
  },
  "dependencies": {
    "@stone-ton/aws-dynamodb-wrapper": "^3.481.4",
    "@stone-ton/env": "^1.0.0",
    "@stone-ton/lambda-handlers": "~2.1.1",
    "aws-lambda": "^1.0.7",
    "@aws-sdk/client-dynamodb": "^3.481.0",
    "@aws-sdk/lib-dynamodb": "^3.481.0",
    "@stone-ton/otlp": "0.0.5",
    "@opentelemetry/exporter-trace-otlp-http": "0.41.2",
    "@opentelemetry/sdk-trace-node": "1.15.2",
    "bcryptjs": "^2.4.3",
    "joi": "~17.12.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.1",
    "@stone-ton/eslint-config-ton": "^0.2.0",
    "@types/aws-lambda": "^8.10.136",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/serverless": "^3.12.22",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "esbuild": "^0.20.2",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.52.1",
    "serverless-offline": "^13.3.3",
    "serverless-offline-local-authorizers-plugin": "^1.2.0",
    "serverless-plugin-typescript": "^2.1.5",
    "typescript": "^5.4.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.4.0",
    "tsc-alias": "^1.8.3"
  }
}
